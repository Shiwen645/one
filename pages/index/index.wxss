/* 顶部搜索栏 */
.custom-nav {
  width: 100vw;
  position: fixed; /* 使用固定定位 */
  top: 0; /* 顶部对齐 */
  left: 0; /* 左侧对齐 */
  right: 0; /* 右侧对齐 */
  z-index: 99; /* 确保导航栏在最上层 */
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 44px; /* 导航栏高度 */
  padding: 0 10px;
  background-color: #ffffff;
  /* 其他样式保持不变 */
  padding-top: 45px;
  padding-bottom: 5px;
}

.nav-image {
  width: 100px; /* 根据需要调整 */
  height: 25px; /* 根据需要调整 */
}

.search-container {
  width: 0px;
  flex-grow: 1;
  margin-left: 10px;
}

.search-input {
  width: 100px;
  height: 30px;
  border: 1px solid #e5e5e5; /* 边框颜色 */
  border-radius: 15px; /* 圆角大小 */
  padding: 0 10px;  
  color: rgb(0, 0, 0);
  position: relative;
  background-color: #e7e4e4;
  margin-left: 10px;
}
.place{
  color: rgb(177, 175, 175);
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0; /* 顶部对齐 */
  left: 0; /* 左侧对齐 */
  right: 0; /* 右侧对齐 */
  z-index: 99; /* 确保导航栏在最上层 */
  width: 100%;
  margin: 0px 0px;
  margin-top: 85px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 44px; 
  background-color: #fff; /* 背景色 */
  border-bottom: 1px solid #ddd; /* 底部边框 */
}

.nav-item {
  flex: 1;
  text-align: center;
}

.nav-text {
  padding: 8px 0;
  font-size: 17px;
  font-weight: bold;
  color: rgb(73, 73, 73);
}

.nav-text.active {
  color: #000000; /* 激活状态文字颜色 */
  border-bottom: 2px solid #080808; /* 激活状态底部边框 */
}
